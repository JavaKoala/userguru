<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.issues.any? %>
      <h3>Issues (<%= @user.issues.count %>)</h3>
      <ol class="issues">
        <%= render @issues %>
      </ol>
      <%= will_paginate @issues %>
    <% end %>
  </div>
</div>