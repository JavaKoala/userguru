<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.issues.any? %>
      <h3>My Issues (<%= @user.issues.count %>)</h3>
      <%= render 'layouts/issues_table' %>
    <% end %>
  </div>
</div>