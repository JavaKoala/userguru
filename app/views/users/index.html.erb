<h1>All users</h1>

<div style="overflow-x:auto;" align="center">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  <%= will_paginate %>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= link_to "Edit",  edit_user_path(user) %></td>
      <td><%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
  <% will_paginate %>
  </table>
