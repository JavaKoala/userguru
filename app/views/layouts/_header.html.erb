<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "user guru", root_path, id: "logo" %>
    <nav>
      <ul class="nav nav-pills navbar-right">
        <li role="presentation" class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          Menu <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Home",  root_path %></li>
            <% if logged_in? %>
              <% if admin_user? %>
                <li><%= link_to "Users",        users_path %></li>
                <li><%= link_to "App Settings", settings_path %></li>
              <% end %>
              <li><%= link_to "Profile",  current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Help",     help_path %></li>
              <li><%= link_to "About",    about_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out",  logout_path, method: "delete" %></li>
            <% else %>
              <li><%= link_to "Help",  help_path %></li>
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
    <% if logged_in? %>
      <%= link_to "New Issue", new_issue_path, class: "btn btn-outline-primary pull-right" %>
      <% if internal_user? %>
        <%= link_to "Issues", issues_path, class: "btn btn-outline-primary pull-right" %>
      <% end %>
    <% end %>
  </div>
</header>