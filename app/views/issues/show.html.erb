<div class="row">
  <h1><%= @issue.title %> <%= link_to "Edit", edit_issue_path(@issue), class: "btn btn-primary" %></h1>
  <aside class="col-md-6">
    <ul class="list-group">
      <li class="list-group-item">Description: <%= @issue.description %></li>
      <li class="list-group-item">Status: <%= @issue.status.humanize %></li>
      <li class="list-group-item">Assigned to: <%= assigned_user_name(@issue) %></li>
      <% if internal_user? %>
        <li class="list-group-item">Created by: <%= issue_creator_name(@issue) %></li>
      <% end %>
    </ul>
  </aside>
  <div class="col-md-6">
    <%= render "shared/comment_form" %>
  </div>
</div>
<div>
  <h3>Comments</h3>
  <%= render "layouts/comments_table" %>
</div>
